<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <!-- Base application theme. -->
    <style name="OguOguUI" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OguOguUI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OguOguUI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OguOguUI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Common styles -->
    <style name="OguOguUI.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Authentication method picker styles -->
    <style name="OguOguUI.AuthMethodPicker" />

    <style name="OguOguUI.AuthMethodPicker.ButtonHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/oui_auth_method_button_width</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="OguOguUI.Button.AccountChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/oui_auth_method_button_drawablePadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/oui_auth_method_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/oui_auth_method_button_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="OguOguUI.Button.AccountChooser.GoogleButton">
        <item name="drawableStartCompat">@drawable/oui_ic_googleg_color_24dp</item>
        <item name="android:background">@drawable/oui_idp_button_background_google</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="OguOguUI.Button.AccountChooser.FacebookButton">
        <item name="drawableStartCompat">@drawable/oui_ic_facebook_white_22dp</item>
        <item name="android:background">@drawable/oui_idp_button_background_facebook</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="OguOguUI.Button.AccountChooser.EmailButton">
        <item name="drawableStartCompat">@drawable/oui_ic_mail_white_24dp</item>
        <item name="android:background">@drawable/oui_idp_button_background_email</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
